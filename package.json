{
  "name": "domorium",
  "version": "1.0.0",
  "description": "Apps for working with `.ged` (GEDCOM) files",
  "scripts": {
    "build:libs": "npm run build -w packages/lsp",
    "build:vscode": "npm run build -w apps/vscode",
    "test": "vitest",
    "lint": "eslint",
    "typecheck": "tsc --noEmit",
    "postinstall": "npm run build:libs"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@stylistic/eslint-plugin": "^5.2.3",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.34.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.41.0",
    "vite": "^7.1.3",
    "vitest": "^3.2.4"
  },
  "private": true
}
