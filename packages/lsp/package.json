{
  "name": "@domorium/lsp",
  "description": "",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs.js",
      "import": "./dist/index.esm.js"
    }
  },
  "files": [
    "dist",
    "package.json",
    "README.md"
  ],
  "scripts": {
    "typecheck": "tsc --noEmit",
    "build:dependencies": "cd ../.. && npm run build -w packages/validator",
    "build": "npm run build:dependencies && vite build && tsc --emitDeclarationOnly --declaration --outDir dist",
    "watch": "vite build --watch",
    "test": "vitest"
  },
  "devDependencies": {
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-protocol": "^3.17.5",
    "vscode-languageserver-textdocument": "^1.0.12"
  },
  "dependencies": {
    "@domorium/validator": "*"
  }
}
